<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Calendar.AddScheduleActivity">

    <!--   -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="171dp"
        android:layout_height="121dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clipboard" />

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="383dp"
        android:layout_height="99dp"
        android:layout_marginTop="120dp"
        android:fontFamily="casual"
        android:hint="제목"
        android:padding="20dp"
        android:textColor="#4A4E69"
        android:textColorHighlight="#F2E9E4"
        android:textColorHint="#4A4E69"
        android:textColorLink="#F2E9E4"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editContent"
        android:layout_width="400dp"
        android:layout_height="257dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:gravity="left|top"
        android:hint="내용"
        android:padding="20dp"
        android:textColor="#4A4E69"
        android:textColorHighlight="#F2E9E4"
        android:textColorHint="#4A4E69"
        android:textColorLink="#F2E9E4"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTitle" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#4A4E69"
        android:text="저장"
        android:textColor="#F2E9E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#4A4E69"
        android:fontFamily="casual"
        android:text="날짜 선택"
        android:textColor="#F2E9E4"
        android:textColorHighlight="#F2E9E4 "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editContent" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="casual"
        android:text="날짜를 선택해주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDate" />

    <!--   -->


</androidx.constraintlayout.widget.ConstraintLayout>